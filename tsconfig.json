{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "rootDirs": ["src", "__tests__"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../__tests__/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules"]
}
